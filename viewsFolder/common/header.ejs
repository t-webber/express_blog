<div id="topNav">
    <nav id='navHeader'>
        <ul>
            <li><a href='/'>Home</a></li>
            <li><a href='/about'>About</a></li>
            <li><a href='/apps'>Apps</a></li>
            <li><a href='/contact'>Contact</a></li>
            <li><a href='/blog'>Blog</a></li>
            <li><a href='/connexion'>
            <% if (user.connected) { %> Log&nbsp;Out
            <% } else { %> Log&nbsp;In <% } %>
            </a></li>

            <li class="toggleWrapper" id="darkLightBtn">
            <input type="checkbox" class="dn" id="dn"/>
            <label for="dn" class="toggle">
              <span class="toggle__handler">
                <span class="crater crater--1"></span>
                <span class="crater crater--2"></span>
                <span class="crater crater--3"></span>
              </span>
              <span class="star star--1"></span>
              <span class="star star--2"></span>
              <span class="star star--3"></span>
              <span class="star star--4"></span>
              <span class="star star--5"></span>
              <span class="star star--6"></span>
            </label>
          </li>

        </ul>
    </nav>

    <div>
    <button class="belowBtn" id='showHideHeader'>Hide</button>  

    <% if (user.connected) { %> 
    <a class="belowBtn" href="/profile">Profile</a>
    <%}%>
    
    <% if (typeof blog !== 'undefined') { %> 
    <a class="belowBtn" href="/blog/create">New Blog</a>
    <%}%>
    </div>

    <script>
        const topNav = document.getElementById('topNav');
        const navHeader = document.getElementById('navHeader');
        const button = document.getElementById('showHideHeader');
        
        function ShowHide () {
            if (button.innerText == 'Show'){
                button.innerText = 'Hide';
                topNav.style.transform = 'translateY(0%)';
                show = 0;
            } else {
                button.innerText = 'Show';
                let height = navHeader.getBoundingClientRect().height ; 
                topNav.style.transform = `translateY(-${height}px)`;
                show = 1;
            }  
        }; 

        button.onclick = ShowHide;
    </script>
</div>